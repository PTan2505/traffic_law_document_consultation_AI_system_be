model Conversation {
  id        Int       @id @default(autoincrement())
  userId    Int
  //user      User      @relation(fields: [userId], references: [id])
  title     String?
  createdAt DateTime
  createdBy String?
  updatedAt DateTime
  updatedBy String?

  messages  Message[]
}

model Message {
  id             Int           @id @default(autoincrement())
  conversationId Int
  conversation   Conversation  @relation(fields: [conversationId], references: [id])
  question       String        @db.Text
  answer         String        @db.Text
  createdAt      DateTime 
  createdBy      String?
  updatedAt      DateTime
  updatedBy      String?
}

model Document {
  id        Int      @id @default(autoincrement())
  path      String
  createdAt DateTime
  createdBy String?
  updatedAt DateTime
  updatedBy String?
}
